{
  "buildCommand": "node -e \"const fs=require('fs');const {execSync}=require('child_process');const paths=['./scripts/run-build.js','../scripts/run-build.js','./client/scripts/run-build.js'];const found=paths.find(p=>fs.existsSync(p));if(!found){console.error('Build helper not found');process.exit(1);}execSync('node '+found,{stdio:'inherit'});\"",
  "outputDirectory": "dist",
  "functions": {
    "api/*.js": {
      "runtime": "@vercel/node@3"
    }
  },
  "rewrites": [
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
